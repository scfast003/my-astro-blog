---
import ContentCard from './ContentCard.astro'
import { Card as ShadcnCard } from './ui/card'
import { SquareArrowOutUpRight } from 'lucide-react'

interface Props {
  title?: string
  body?: string
  colSpan?: string
  rowSpan?: string
  href?: string
  colorText?: string
}

const { title, body, colSpan, rowSpan, href, colorText } = Astro.props
---

<ShadcnCard
  className={`card-animate group relative col-span-1 h-auto md:h-full w-full justify-start overflow-hidden p-6 shadow-lg transition duration-75 ease-in-out ${
    colSpan || 'md:col-span-2'
  } ${rowSpan || ''} ${href ? 'cursor-pointer hover:border-primary' : ''}`}
>
  {
    href ? (
      <a href={href} class={`block h-auto md:h-full w-full ${colorText || ' '}`}>
        <SquareArrowOutUpRight
          className="group-hover:text-primary position absolute right-6"
          size={20}
        />
        <ContentCard title={title} body={body}>
          <slot />
        </ContentCard>
      </a>
    ) : (
      <ContentCard title={title} body={body}>
        <slot />
      </ContentCard>
    )
  }
</ShadcnCard>
