---
import Card from '../../components/Card.astro';
import { PROFILE } from '../../content/profileData';
import { Mail, MapPin, MessageSquare } from 'lucide-react'; // 确保引入图标
---

<Card colSpan="md:col-span-4" rowSpan="md:row-span-1">
  <div class="flex flex-col md:flex-row h-full items-center justify-between px-6 py-4 gap-4">
    
    <div class="flex flex-col gap-1 text-center md:text-left">
      <h2 class="text-xl font-bold text-gray-800 dark:text-white">联系我</h2>
      <p class="text-sm text-gray-500">欢迎随时交流技术或项目合作</p>
    </div>

    <div class="flex flex-col md:flex-row gap-6">
      <div class="flex items-center gap-2 text-sm text-gray-600 dark:text-gray-300">
        <Mail size={18} className="text-primary" />
        <a href="mailto:71go@proton.me" class="hover:text-primary transition-colors">
          71go@proton.me
        </a>
      </div>

      <div class="flex items-center gap-2 text-sm text-gray-600 dark:text-gray-300">
        <MapPin size={18} className="text-primary" />
        <span>Shanghai, China</span>
      </div>
    </div>

    <a href={PROFILE.links.github} target="_blank" class="p-2 bg-gray-100 dark:bg-gray-800 rounded-full hover:text-primary transition-colors">
      <MessageSquare size={20} />
    </a>
    
  </div>
</Card>
