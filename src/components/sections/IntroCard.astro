---
import Card from '../../components/Card.astro';
import { Button } from '../../components/ui/button';
import { PROFILE } from "../../content/profileData";
import { Github, Youtube, Twitter, Book, PanelsTopLeft } from 'lucide-react';
---

<Card colSpan="md:col-span-4 lg:col-span-4" rowSpan="md:row-span-1 lg:row-span-2">
  <div class="flex flex-col md:flex-row h-full w-full gap-8 p-6 relative z-10">
    
    <div class="flex flex-col justify-center flex-1 gap-6 text-center md:text-left">
      <div>
        <p class="m-0 text-2xl font-light leading-tight">
          Hi, I'm <b class="font-bold text-primary">{PROFILE.firstName}</b> ðŸ‘‹
        </p>
        <p class="text-sm text-gray-500 mt-2">{PROFILE.headLine}</p>
      </div>
      
      <ul class="space-y-2 inline-block mx-auto md:mx-0">
        {PROFILE.shortIntros.map((intro) => (
          <li class="text-gray-700 dark:text-gray-300 flex items-center gap-2 justify-center md:justify-start">
             <span class="w-1.5 h-1.5 rounded-full bg-primary/60 shrink-0"></span>
             <span>{intro}</span>
          </li>
        ))}
      </ul>
      
      <div class="flex gap-3 flex-wrap justify-center md:justify-start">
        <a href={PROFILE.links.github} aria-label="github profile" target="_blank">
          <Button aria-label="github profile" variant="outline" className="dark:bg-gray-800/50 dark:border-gray-700 hover:text-primary hover:border-primary/50 transition-all">
            <Github size={18} />
            <span class="sr-only">GitHub Profile</span>
          </Button>
        </a>
      </div>
    </div>

    <div class="flex shrink-0 justify-center items-center md:justify-end">
       <div class="relative w-32 h-32 md:w-48 md:h-48 rounded-full overflow-hidden border-[4px] border-white dark:border-gray-800 shadow-xl group">
         <img
           src={PROFILE.avatarUrl}
           class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
           alt={`image of ${PROFILE.name}`}
         />
      </div>
    </div>

  </div>

  <div class="absolute top-1/2 right-0 -translate-y-1/2 translate-x-1/4 w-72 h-72 bg-primary/10 rounded-full blur-[60px] z-0 pointer-events-none"></div>
</Card>
